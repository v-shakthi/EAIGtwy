# Copy to .env and fill in your values
# cp .env.example .env

# === LLM Provider Keys (add at least one) ===
ANTHROPIC_API_KEY=your-anthropic-key-here
OPENAI_API_KEY=your-openai-key-here

# Azure OpenAI (both required if using Azure)
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-01

# Google Gemini
GOOGLE_API_KEY=your-google-key-here

# === Gateway Settings ===
SECRET_KEY=change-me-to-a-256-bit-random-string
DEBUG=false

# === PII Redaction ===
PII_REDACTION_ENABLED=true

# === Budget Defaults (USD) ===
DEFAULT_TEAM_DAILY_BUDGET_USD=10.0
DEFAULT_TEAM_MONTHLY_BUDGET_USD=200.0

# === Redis (optional â€” falls back to in-memory if not set) ===
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# === SIEM Integration (optional) ===
# SIEM_WEBHOOK_URL=https://your-splunk-hec-endpoint/services/collector/event

# === Audit Log ===
AUDIT_LOG_FILE=audit_logs/gateway_audit.jsonl
